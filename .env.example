# Environment Variables Template for Automo Backend
# Copy this file to .env and fill in the actual values

# Spring Configuration
SPRING_PROFILES_ACTIVE=local

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/automo_db
SPRING_DATASOURCE_USERNAME=automo
SPRING_DATASOURCE_PASSWORD=your_secure_password_here

# JWT Security (CRITICAL: Generate secure keys for production)
JWT_SECRET_KEY=your_256_bit_secret_key_here_minimum_32_characters_long_and_secure

# Admin Configuration
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_DEFAULT_PASSWORD=your_secure_admin_password_here

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here

# SMS Configuration (Optional)
SMS_ENABLED=false
SMS_API_KEY=your-twilio-or-sms-provider-api-key

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Server Configuration
SERVER_PORT=8080

# Production Notes:
# - Generate a unique JWT_SECRET_KEY for production (never reuse development keys)
# - Set CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# - Use strong database credentials
# - Configure real email and SMS provider credentials
# - Set SPRING_PROFILES_ACTIVE=prod for production